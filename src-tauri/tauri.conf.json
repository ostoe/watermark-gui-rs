{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "watermark-app",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "dialog": {
        "all": true, 
        "open": true, 
        "save": true 
      },
      "fs": {
				"all": true,
				"copyFile": true,
				"createDir": true,
				"readDir": true,
				"removeDir": true,
				"removeFile": true,
				"renameFile": true,
				"writeFile": true,
        "scope":["*"]
			},
			"protocol": {
				"all": true,
				"asset": true,
				"assetScope": ["*"]
			},
      "globalShortcut": {
        "all": true
      },
      "shell": {
        "all": true, 
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [{
          "name": "perl-run",
          "cmd": "perl",
          "args": [{"validator": ".*"}, "-j", {"validator": ".*"}]
        },{
          "name": "resources/exiftool", "sidecar":true, "args": [ "-j", {"validator": ".*"}]
        },{
          "name": "win-exif-run",
          "cmd": ".\\resources\\exiftool-x86_64-pc-windows-msvc.exe",
          "args": [ "-j", {"validator": ".*"}]
        }
      ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["resources/exiftool"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "watermark-app",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["resources"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 1000,
        "resizable": true,
        "title": "Wartermark",
        "width": 1200,
        "visible": true 
      },
      {
         "width": 320,
          "height": 240,
          "decorations": false,
          "url": "../src/assets/splashscreen.html",
          "label": "splashscreen",
          "visible": false 
        }
    ]
  }
}